        <backdrop:BackdropFrontLayer LeftCornerRadius="30" RightCornerRadius="0" EdgeShape="Flat">
            <Grid />
        </backdrop:BackdropFrontLayer>
    </backdrop:SfBackdropPage.FrontLayer>-->
</backdrop:SfBackdropPage>